<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/syllabus_category"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.SyllabusCategory">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="@color/green_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backArrow"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Jamb Syllabus"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backArrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/backArrow"
            app:layout_constraintTop_toTopOf="@+id/backArrow" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category_list"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_background"
                android:padding="10dp"
                android:text="English"
                app:fontFamily="@font/arial"
                android:textSize="20sp"
                android:textColor="@color/green_text"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/green_text"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mathematics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_background"
                android:padding="10dp"
                android:text="Mathematics"
                app:fontFamily="@font/arial"
                android:textSize="20sp"
                android:textColor="@color/green_text"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/green_text"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/chemistry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_background"
                android:padding="10dp"
                android:text="Chemistry"
                app:fontFamily="@font/arial"
                android:textSize="20sp"
                android:textColor="@color/green_text"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/green_text"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/physics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_background"
                android:padding="10dp"
                android:text="Physics"
                app:fontFamily="@font/arial"
                android:textSize="20sp"
                android:textColor="@color/green_text"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/green_text" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/biology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_background"
                android:padding="10dp"
                android:text="Biology"
                app:fontFamily="@font/arial"
                android:textSize="20sp"
                android:textColor="@color/green_text"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/green_text" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/commerce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_background"
                android:padding="10dp"
                android:text="Commerce"
                app:fontFamily="@font/arial"
                android:textSize="20sp"
                android:textColor="@color/green_text"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/green_text" />
        </LinearLayout>

        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>